{
  "name": "p2panda-js",
  "version": "0.3.0",
  "description": "All the things a panda needs",
  "main": "lib/index.js",
  "browser": "lib/index.min.js",
  "scripts": {
    "build": "run-s clear webpack",
    "clear": "rimraf ./lib ./wasm",
    "docs": "typedoc src/index.ts",
    "lint": "eslint --ext .ts .",
    "test": "cross-env NODE_ENV=development run-s clear webpack:node test:jest",
    "test:jest": "jest --coverage=$npm_config_coverage",
    "test:watch": "nodemon --watch '../p2panda-rs/src/*' --watch './src/*' --exec 'npm test' --ext js,ts,json",
    "webpack": "cross-env NODE_ENV=production run-s webpack:web webpack:node",
    "webpack:node": "webpack --config-name node --color",
    "webpack:web": "webpack --config-name web --color"
  },
  "engines": {
    "node": ">= v12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2panda/p2panda.git"
  },
  "contributors": [
    "adz <x1d@adz.garden>",
    "cafca <cafca@001.land>",
    "sandreae <contact@samandreae.com>",
    "sophiiistika <sophiiistika@mailbox.org>"
  ],
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/p2panda/p2panda/issues"
  },
  "homepage": "https://github.com/p2panda/p2panda#readme",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/register": "^7.16.5",
    "@tsconfig/node12": "^1.0.9",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/debug": "^4.1.7",
    "@types/fetch-headers": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@wasm-tool/wasm-pack-plugin": "^1.6.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "jest": "^27.4.5",
    "mock-apollo-client": "^1.2.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "debug": "^4.3.3",
    "fetch-headers": "^2.0.0",
    "graphql": "^16.5.0",
    "node-fetch": "^2.6.1"
  }
}
