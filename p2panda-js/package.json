{
  "name": "p2panda-js",
  "version": "0.1.0",
  "description": "All the things a panda needs",
  "main": "lib/index.js",
  "browser": "lib/index.min.js",
  "scripts": {
    "build": "run-s clear webpack",
    "clear": "rimraf ./lib ./wasm",
    "lint": "eslint --ext .ts .",
    "test": "cross-env NODE_ENV=development run-p --race test:mock-node test:run",
    "test:jest": "jest --detectOpenHandles",
    "test:mock-node": "open-rpc-mock-server --port 2020",
    "test:run": "run-s clear webpack:node test:jest",
    "test:template-openrpc": "npx ts-node ./test/generate-openrpc-spec.ts",
    "test:watch": "nodemon --watch '../p2panda-rs/src/*' --watch './src/*' --exec 'npm test' --ext js,ts,json",
    "webpack": "cross-env NODE_ENV=production run-s webpack:web webpack:node",
    "webpack:node": "webpack --config-name node --color",
    "webpack:web": "webpack --config-name web --color"
  },
  "engines": {
    "node": ">= v12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2panda/p2panda.git"
  },
  "contributors": [
    "adz <x1d@adz.garden>",
    "cafca <cafca@001.land>",
    "sandreae <contact@samandreae.com>",
    "sophiiistika <sophiiistika@mailbox.org>"
  ],
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/p2panda/p2panda/issues"
  },
  "homepage": "https://github.com/p2panda/p2panda#readme",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/register": "^7.15.3",
    "@open-rpc/client-js": "^1.7.1",
    "@open-rpc/mock-server": "^1.7.4",
    "@open-rpc/typings": "^1.12.1",
    "@tsconfig/node12": "^1.0.9",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/debug": "^4.1.7",
    "@types/fetch-headers": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@wasm-tool/wasm-pack-plugin": "^1.5.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "debug": "^4.3.2",
    "fetch-headers": "^2.0.0",
    "node-fetch": "^2.6.1"
  }
}
