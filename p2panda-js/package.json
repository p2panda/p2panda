{
  "name": "p2panda-js",
  "version": "0.1.0",
  "description": "All the things a panda needs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clear && webpack --mode production",
    "clear": "rimraf ./lib && rimraf ./wasm",
    "lint": "eslint '*/**/*.{js,ts}'",
    "start": "npm run build",
    "test": "npm run test:compile-wasm && npm run test:run-mocha",
    "test:watch": "nodemon --watch ../p2panda-rs/src/* --watch src/* --exec 'npm run test'",
    "test:compile-wasm": "wasm-pack build ../p2panda-rs --out-dir ../p2panda-js/wasm --target nodejs",
    "test:run-mocha": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha -r ts-node/register -r tsconfig-paths/register -r @babel/register src/**/*.test.ts"
  },
  "engines": {
    "node": ">= v12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2panda/p2panda.git"
  },
  "contributors": [
    "sophiiistika <sophiiistika@mailbox.org>",
    "adz <x1d@adz.garden>",
    "cafca <cafca@001.land>"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/p2panda/p2panda/issues"
  },
  "homepage": "https://github.com/p2panda/p2panda#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/register": "^7.12.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@wasm-tool/wasm-pack-plugin": "^1.3.1",
    "babel-loader": "^8.2.1",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.2.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {}
}
