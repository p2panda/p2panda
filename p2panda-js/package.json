{
  "name": "p2panda-js",
  "version": "0.1.0",
  "description": "All the things a panda needs",
  "main": "lib/index.js",
  "browser": "lib/index.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clear && npm run build:browser && npm run build:node",
    "build:browser": "webpack --mode production --config-name browser",
    "build:node": "webpack --mode production --config-name node",
    "clear": "rimraf ./lib ./wasm-web ./wasm-node",
    "lint": "eslint ./src/**/*.ts",
    "start": "npm run build",
    "test": "npm run test:prepare && npm run test:mocha",
    "test:prepare": "webpack --mode development --config-name node",
    "test:watch": "nodemon --watch ../p2panda-rs/src/* --watch src/* --exec 'npm run test'",
    "test:mocha": "mocha -r ts-node/register -r tsconfig-paths/register -r @babel/register ./test/**/*.test.ts"
  },
  "engines": {
    "node": ">= v12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2panda/p2panda.git"
  },
  "contributors": [
    "sophiiistika <sophiiistika@mailbox.org>",
    "adz <x1d@adz.garden>",
    "cafca <cafca@001.land>"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/p2panda/p2panda/issues"
  },
  "homepage": "https://github.com/p2panda/p2panda#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/register": "^7.12.10",
    "@tsconfig/node12": "^1.0.7",
    "@types/chai": "^4.2.14",
    "@types/copy-webpack-plugin": "^6.4.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^12.19.12",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@wasm-tool/wasm-pack-plugin": "^1.3.1",
    "babel-loader": "^8.2.2",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.12.2",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {}
}
