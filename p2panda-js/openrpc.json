                    "name": "entryEncoded",
                    "schema": {
                        "$ref": "#/components/schemas/EntryEncoded"
                    }
                },
                {
                    "name": "messageEncoded",
                    "schema": {
                        "$ref": "#/components/schemas/MessageEncoded"
                    }
                }
            ],
            "result": {
