{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./src/*"],
      "wasm": ["./wasm"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["src/**/*", "wasm/*"]
}
