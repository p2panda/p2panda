{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "~/*": ["./src/*"],
      "wasm/*": ["./wasm/*"]
    },
    "lib": ["dom"],
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "strict": true,
    "declaration": true,
    "declarationDir": "./lib/types"
  }
}
