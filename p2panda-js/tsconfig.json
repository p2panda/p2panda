{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "wasm": [
        "./wasm"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*",
    "wasm/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
